<p id="notice"><%= notice %></p>

<h1>Listing Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Price</th>
      <th>Start</th>
      <th>Finish</th>
      <th>Farmer</th>
      <th>Crop</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.weight %></td>
        <td><%= contract.price %></td>
        <td><%= contract.start %></td>
        <td><%= contract.finish %></td>
        <td><%= contract.farmer %></td>
        <td><%= contract.crop %></td>
        <td><%= contract.client %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

