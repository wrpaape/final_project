<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id='page-cover'></div>
    <%= yield %>
    <div id="modal-sign-up" class="sign-up-form modal fade" tab-index="-1" role="dialog" aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg">
        <div class="modal-content form">
          <%= form_for(resource, :as => resource_name,
                     :url => registration_path(resource_name) ,
                     :html => {:id => "sign-in-up-form-tag"},
                     :format => :json,
                     :remote => true ) do |f| %>
            <div class="form-query-wrap">
              <span class="code code-model">User</span><span class="code code-ar-keyword">.create(</span><!--
           --><%= f.label :name, "name: ", class: "code code-attribute" %><span class="code code-value">"</span><!--
           --><%= f.text_field :name, autocomplete: "off", size: 12, id: "sign-up-name-field" %><span class="code code-value">"</span><span class="code code-ar-keyword">,</span>
            </div>
            <div class="form-query-wrap">
              <%= f.label :email, "email: ", class: "code code-attribute" %><span class="code code-value">"</span><!--
           --><%= f.email_field :email, autocomplete: "off", size: 12 %><span class="code code-value">"</span><span class="code code-ar-keyword">,</span>
            </div>
            <div class="form-query-wrap">
              <%= f.label :password, "password: ", class: "code code-attribute" %><span class="code code-value">"</span><!--
           --><%= f.password_field :password, autocomplete: "off", size: 12 %><span class="code code-value">"</span><span class="code code-ar-keyword">,</span>
            </div>
            <div class="form-query-wrap">
              <%= f.label :password_confirmation, "password_confirmation: ", class: "code code-attribute" %><span class="code code-value">"</span><!--
           --><%= f.password_field :password_confirmation, autocomplete: "off", size: 12 %><span class="code code-value">"</span><span class="code code-ar-keyword">)</span>
            </div>
            <div class="actions sign-up">
              <%= f.submit "sign up", class: "btn btn-primary", id: "sign-in-up-submit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div id="modal-sign-in" class="sign-in-form modal fade" tab-index="-1" role="dialog" aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg">
        <div class="modal-content form">
          <%= form_for(resource, :as => resource_name,
                     :url => session_path(resource_name) ,
                     :html => {:id => "sign-in-up-form-tag"},
                     :format => :json,
                     :remote => true ) do |f| %>
            <div class="form-query-wrap">
              <span class="code code-model">User</span><span class="code code-ar-keyword">.where(</span><!--
           --><span class="code code-sql">"</span><!--
           --><%= f.label :login, "name = '", class: "code code-sql" %><!--
           --><%= f.text_field :login, autocomplete: "off", size: 12, id: "sign-in-name-field" %><span class="code code-sql">'&nbsp;OR&nbsp;&nbsp;&nbsp;&nbsp;</span>
            </div>
            <div class="form-query-wrap">
              <%= f.label :email, "email = '", class: "code code-sql" %><!--
           --><%= f.email_field :email, autocomplete: "off", size: 12 %><span class="code code-sql">'&nbsp;AND&nbsp;&nbsp;&nbsp;</span>
            </div>
            <div class="form-query-wrap">
              <%= f.label :password, "password = '", class: "code code-sql" %><!--
           --><%= f.password_field :password, autocomplete: "off", size: 12 %><!--
           --><span class="code code-sql">'"</span><!--
           --><span class="code code-ar-keyword">).take</span>
            </div>
            <div class="actions sign-in">
              <%= f.submit "sign in", class: "btn btn-primary", id: "sign-in-up-submit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
